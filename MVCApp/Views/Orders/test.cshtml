@model IEnumerable<OrdersJoined>
@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>
<h2>Orders : @Model.Count()</h2>
<table class="table"

 
  
  >
    <thead>
        <tr >
            <th style="cursor:pointer">
                Customer
            </th>
            <th >
                CustomerID
            </th>
            <th>Order Date</th>
              <th>Required Date</th>
              <th>Shipped Date</th>
              <th>Status</th>
              <th>Details</th>
        </tr>
    </thead>
<tbody>
@foreach (OrdersJoined item in Model)
{   <tr>
         <td>
             @item.customer.ContactName
            </td>
            <td>
             @item.order.CustomerId
            </td>
               <td>
             @item.order.OrderDate.ToString().Substring(1,10)
            </td>
              <td>
             @item.order.RequiredDate.ToString().Substring(1,10)
              </td>
               <td>@(item.order.ShippedDate != null ? item.order.ShippedDate.ToString().Substring(1,10) : "Not shipped yet")
            </td>
              <td style="@(item.order.ShippedDate != null ? "color:green;" : "color:red;")">@(item.order.ShippedDate != null ? "OK" : "NOT")
            </td>
            <td>
            <a asp-action="Details" asp-route-id="@item.order.OrderId">Info</a> |
            </td>
        </tr>
 
}
</tbody>
</table>
