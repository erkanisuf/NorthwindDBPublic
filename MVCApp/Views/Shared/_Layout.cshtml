<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">


</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div class="container">
                <div>
                    <button class="btn btn-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling"><i class="bi bi-list-nested"></i></button>
                    <span class="text-white text-center m-5">Welcome Erkan Isuf</span>
                </div>
                <a class="navbar-brand h1" asp-area="" asp-controller="Home" asp-action="Index">Northwind<i class="bi bi-pie-chart-fill"></i></a>

                @* Drawer *@
                <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Navigation</h5>
                        <button type="button" class="btn-close  btn-light text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">

                        @* HERE UL NAV *@
                        <div class="d-flex flex-column justify-content-between">

                            <ul class="navbar-nav flex-grow-1 d-flex flex-column justify-content-between ">
                                <div class="btn-group  ">
                                    <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        User
                                    </button>
                                    <ul class="dropdown-menu ">
                                        
                                        <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Login">Login</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Register">Register</a></li>
                                        <li><form class="dropdown-item" asp-controller="User" asp-action="LogOut"><input type="submit" value="Logout" /> </form></li>
                                    </ul>
                                </div>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill"></i>Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index"><i class="bi bi-person-lines-fill"></i>Customers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index"><i class="bi bi-bag-fill"></i>Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Shippers" asp-action="Index"><i class="bi bi-truck"></i>Shippers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index"><i class="bi bi-cart-fill"></i>Orders</a>
                                </li>
                                <div></div>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </nav>
        <@* div> <a asp-area="" asp-controller="User" asp-action="Register">Register</a></div>
        <div> <a asp-area="" asp-controller="User" asp-action="Login">Login</a></div>
        <div>  <form asp-controller="User" asp-action="LogOut"><input type="submit" value="Logout" /> </form></div> *@
    </header>


    @* Body Render *@
    <div class="containerBody">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MVCApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @* Dont change places of these scripts cuz they aint working *@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>







</body>
</html>
